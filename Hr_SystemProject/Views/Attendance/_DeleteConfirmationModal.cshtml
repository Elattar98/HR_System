@model Attendence
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<div class="modal fade" id="popup_@Model.Emp_Id@String.Join("", Model.date.ToString().Split("/"))" tabindex="-1" data-backdrop="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <h6>Are You Sure About That?!!</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="removeAttendance('@Model.date.ToDateTime(TimeOnly.MinValue)', @Model.Emp_Id)" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>


